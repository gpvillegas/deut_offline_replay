#-------------------------------------------
#------------MAIN CONTROLS------------------
#    (BASE, generic main controls)
#-------------------------------------------


#--------------------------------
#   INITIALIZATION PARAMETERS
#--------------------------------

# Select which analysis type to carry out (either 'data' or 'simc')
analysis_type = data

# Select which was the electron arm (either 'HMS' or 'SHMS')
electron_arm = SHMS

# Select which target was inserted during the runs
# (currently, the code accepts: LH2 and LD2)
target_type = LD2

# Select the DAQ mode of the experiment ('coin' or 'singles')
daq_mode = coin

# Select whether to look at helicity-variables or NOT (1 = TRUE, 0 = FALSE)
helicity = 0

# Select BCM type (BCM4A, BCM4B, BCM4C, BCM1, BCM2)-------
bcm_type = BCM4A

# Select bcm current threshold (minimum, in microAmps (uA) units)
current_thrs_bcm = 10.

# Select trigger type (in COIN DAQ MODE) to use in computer/total live time correction
# (you can choose trig1, trig2, trig3, trig4, trig5, trig6)
trigger_type = trig6

# Select whether to combine multiple runs or NOT (1 = TRUE, 0 = FALSE)
combine_histos = 1

#---------------------------
# Set Input File Names Path
#---------------------------

fname_file =   inp/set_basic_filenames.inp
cuts_file  =   inp/set_basic_cuts.inp
hist_file  =   inp/set_basic_histos.inp
run_list   =   inp/runlist.txt
